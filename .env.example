APP_NAME=Certy
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logo path relative to public/ (e.g. logo.png). Replace the file or set APP_LOGO to change the logo without editing code.
APP_LOGO=logo.png

# Theme colors (hex). Primary = menu/buttons, Secondary = danger, Accent = success/highlights.
APP_THEME_PRIMARY=#1e40af
APP_THEME_SECONDARY=#dc2626
APP_THEME_ACCENT=#84cc16

# Contract PDF footer (2 lines shown at bottom of attestations).
CONTRACT_FOOTER_LINE_1="SARL au Capital de 1 000 000 FCFA, Entreprise régie par le code CIMA"
CONTRACT_FOOTER_LINE_2="Siège social, Tél : (+225) 07 07 89 59 43 / 07 07 05 87 81"

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Facturation (email pour demandes de plan)
BILLING_EMAIL=billing@example.com

# Ollama (pour l'assistant IA)
# Avec DDEV : utiliser host.docker.internal pour accéder à Ollama sur la machine hôte
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2

# OCR pour PDF scannés (Imagick + Ghostscript + Tesseract requis)
OCR_ENABLED=true
OCR_LANGUAGE=fra+eng

# ASACI Core API (authentification courtiers + appels externes)
ASACI_CORE_URL=https://api.asaci.ci

# Certy IA — assistant question/réponse (clients, véhicules, contrats, bordereaux)
CERTY_IA_ENABLED=false
CERTY_IA_NAME="Certy IA"
# Fournisseur : ollama | grok | openai. Défaut : ollama si OLLAMA_URL, sinon grok si XAI_API_KEY, sinon openai.
CERTY_IA_PROVIDER=grok
# Grok / xAI — gratuit (crédits), clé sur console.x.ai
XAI_API_KEY=
CERTY_IA_GROK_MODEL=grok-4-1-fast-non-reasoning
# OpenAI — requis si CERTY_IA_PROVIDER=openai
OPENAI_API_KEY=
CERTY_IA_MODEL=gpt-4o-mini
